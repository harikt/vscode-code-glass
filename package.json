{
  "name": "codeglass",
  "displayName": "CodeGlass",
  "description": "AI-powered code commenting tool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:codeglass.addComments"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeglass.addComments",
        "title": "CodeGlass: Add Comments"
      }
    ],
    "configuration": {
      "title": "CodeGlass",
      "properties": {
        "codeglass.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Base URL for the Ollama API"
        },
        "codeglass.model": {
          "type": "string",
          "default": "codeglass",
          "description": "Model to use for generating comments"
        },
        "codeglass.defaultPrompt": {
          "type": "string",
          "default": "Add appropriate comments to the following code to improve readability:",
          "description": "Default prompt template for comment generation"
        },
        "codeglass.prompts": {
          "type": "object",
          "default": {},
          "description": "Language-specific prompt templates",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "14.x",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "axios": "^0.21.1"
  }
}