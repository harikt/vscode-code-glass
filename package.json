{
  "name": "codeglass",
  "displayName": "CodeGlass",
  "description": "A VS Code extension to add comments to your code using AI.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.58.0"
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/vscode": "^1.58.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.4.0"
  },
  "contributes": {
    "commands": [
      {
        "command": "codeglass.addComments",
        "title": "CodeGlass: Add Comments to Code"
      }
    ],
    "configuration": {
      "type": "object",
      "properties": {
        "codeglass.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "The base URL for the AI service."
        },
        "codeglass.model": {
          "type": "string",
          "default": "codeglass",
          "description": "The AI model to use for generating comments."
        }
      }
    }
  }
}
